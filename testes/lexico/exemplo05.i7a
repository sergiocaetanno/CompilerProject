inicioprog

inicioargs
	literal letra;
	inteiro cont;
fimargs

iniciovars
	literal chute;	{ Caractere escolhido previamente. }
	inteiro zero;
fimvars

chute = "k";
zero = 0;

se (letra == chute) entao
	escreva "Acertei!\n";
fimse

{ Verificando e informando sobre contador < 0 }
se (cont < zero) entao
	escreva "cont < 0\n";
fimse

enquanto (cont > 0) faca
	escreva letra;
	escreva "\n";
fimenquanto

fimprog
